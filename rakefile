

namespace :neo4j do
  desc 'Start the Neo4j Server'
  task :start do
    sh 'neo4j start'
  end

  desc 'Stop the Neo4j Server'
  task :stop do
    sh 'neo4j stop'
  end
end

namespace :server do
  desc 'Start the server'
  task :start do
    sh 'rackup' # Â¿?
  end

  desc 'Start the server (network test)'
  task :start_net do
    sh 'ruby main.rb -o 0.0.0.0'
  end
end
